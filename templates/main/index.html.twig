{% extends '/layout/base.html.twig' %}

{% block title %}Bienvenue !{% endblock %}

{% block body %}

    <h1 class="text-center">Bienvenue sur Sortir.com</h1>

    <div>
        <p class="text-right">Date du jour : {{ "now"|date("d/m/Y") }}</p>
        <p class="text-right">Participant : {{ app.User }}</p>
    </div>

    <div class="border border-dark bg-secondary text-white w-75 mx-auto rounded">
        <h4>Filtrer les sorties</h4>


        <div class="container">
            <div class="row">
                <div class="col-sm text-center">
                    <p>Site : <select name="sites" id="sites">
                                  {% for site in sites %}
                                    <option value="{{ site.nomSite }}">
                                        {{ site.nomSite }}
                                    </option>
                                  {% endfor %}
                              </select>

                    </p>
                    <p>Le nom de la sortie contient : <input type="text" placeholder="search" class="rounded" id="searchSortie"/></p>
                    <p>Entre <input type="date" class="rounded"/> et <input type="date" class="rounded"/> </p>
                </div>
                <div class="col-sm text-center">
                    <div> <input type="checkbox" value="orga">Sorties dont je suis l'organisateur/trice</div>
                    <div><input type="checkbox" value="inscrit">Sorties auxquelles je suis inscrit/e</div>
                    <div><input type="checkbox" value="noInscrit">Sorties auxquelles je ne suis pas inscrit/e</div>
                    <div><input type="checkbox" value="passées">Sorties passées</div>
                </div>
                <div class="col-sm text-center">
                    <button type="submit" class="btn btn-lg btn-primary" id="search">Rechercher</button>
                </div>
            </div>
        </div>
    </div>

   <p class="text-center"><img width="500" height="500" src="{{ asset('assets/img/accueil.png') }}"></p>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="thead-dark">
            <tr class="table-active">
                <th scope="col">Nom de la sortie</th>
                <th scope="col">Date de la sortie</th>
                <th scope="col">Clôture</th>
                <th scope="col">Inscrits/Places</th>
                <th scope="col">Etat</th>
                <th scope="col">Inscrit</th>
                <th scope="col">Organisateur</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>

            <tbody class="thead-light">

            {% for sortie in sorties %}
                <tr>
                    <td>{{ sortie.nomSortie }}</td>
                    <td>{{ sortie.dateHeureDebut |date('d/m/Y H:i') }}</td>
                    <td>{{ sortie.dateLimiteInscription |date('d/m/Y') }}</td>
                    <td>{{ sortie.nbInscriptionMax }}</td>
                    <td>{{ sortie.etat }}</td>
                    <td>x</td>
                    <td>{{ sortie.organisateur }}</td>

                    {% if is_granted('ROLE_USER') %}
                        <td>
                           <span>
                               <button type="button" class="btn btn-outline-success">
                               <a href="{{ path('detail_sortie', {'id':sortie.id}) }}">
                                   <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                        fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                       <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                                   </svg>
                               </a>
                               </button>
                           </span>

                            <span>
                               <button type="button" class="btn btn-outline-success">
                                   <a href="{{ path('rejoindre_sortie', {'id':sortie.id}) }}">
                               <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg" viewBox="0 0 16 16">
                                <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425a.247.247 0 0 1 .02-.022Z"/>
                                </svg>
                                    </a>
                                   </button>
                           </span>


                            <span>
                               <button type="button" class="btn btn-outline-success">
                                   <a href="{{ path('desister_sortie', {'id':sortie.id}) }}">
                               <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                                  <path fill-rule="evenodd" d="M13.854 2.146a.5.5 0 0 1 0 .708l-11 11a.5.5 0 0 1-.708-.708l11-11a.5.5 0 0 1 .708 0Z"/>
                                  <path fill-rule="evenodd" d="M2.146 2.146a.5.5 0 0 0 0 .708l11 11a.5.5 0 0 0 .708-.708l-11-11a.5.5 0 0 0-.708 0Z"/>
                                </svg>
                                    </a>
                                   </button>
                           </span>
                        </td>

                    {% else %}

                            <td>
                                <span>
                               <button type="button" class="btn btn-outline-success">
                               <a href="{{ path('detail_sortie', {'id':sortie.id}) }}">
                                   <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                        fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                       <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                                   </svg>
                               </a>
                               </button>
                           </span>
                        </td>

                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="row  m-5">
        <div class="group">
            <a type="button" value="Créer une sortie" class="btn btn-lg btn-primary" href="{{ path('insert') }}">Créer une sortie</a>
        </div>
    </div>
{% endblock %}
